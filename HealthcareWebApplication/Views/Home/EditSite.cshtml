@model HealthcareWebApplication.Models.SiteModel

@{
    ViewBag.Title = "Edit Site";
}

<h2>EditSite</h2>


@using (Html.BeginForm("EditSite", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>SiteModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { placeholder = Model.Address, @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SiteDoctor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SiteDoctor, new { htmlAttributes = new { placeholder = Model.SiteDoctor, @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SiteDoctor, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(Model => Model.SiteNumber)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
