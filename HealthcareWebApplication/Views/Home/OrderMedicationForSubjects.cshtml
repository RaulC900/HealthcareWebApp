@model HealthcareWebApplication.ViewModels.OrderSubjectMedicationViewModel

@{
    ViewBag.Title = "OrderMedicationForSubjects";
}

<h2>OrderMedicationForSubjects</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>SubjectMedicationModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.SubjectMedication.MedicationId, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownListFor(x => Model.SubjectMedication.MedicationId, new SelectList(Model.Medication, "MedicationId", "MedicationId"), "Select Medication Id", htmlAttributes: new { @class = "form-control", id = "Country" })
				@Html.ValidationMessageFor(x => x.SubjectMedication.MedicationId, "", new { @class = "text-danger" })
			</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SubjectMedication.Quantity, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SubjectMedication.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SubjectMedication.Quantity, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(Model => Model.SubjectMedication.SubjectId)

        @Html.HiddenFor(Model => Model.SubjectMedication.SiteId)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
