@model IEnumerable<HealthcareWebApplication.Models.DepotModel>

@{
    ViewBag.Title = "ViewDepot";
}

<h2>ViewDepot</h2>

<p>
    @Html.ActionLink("Add Medication To Depot", "AddMedicationToDepot")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MedicationId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MedicationId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditDepotMedication", new { param1 = item.MedicationId, param2 = item.Quantity }) |
            @Html.ActionLink("Delete", "DeleteDepotMedication", new { param1 = item.MedicationId })
        </td>
    </tr>
}

</table>
